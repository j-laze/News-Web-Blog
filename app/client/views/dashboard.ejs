<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%- include("partials/metadata.ejs") %>

    <title>Document</title>
  </head>
  <body>
    <%- include("partials/authed_nav_header.ejs") %>

    <main>
      <h1>Here are your current posts!</h1>

      <div class="post_list">
        <% posts.forEach((post) => { %>
        <div class="post">
          <h2 style="color: #de0000"><%= post.title %></h2>
          <div class="post_content"><p><%= post.content %></p></div>
          <span>Posted on: <%= post.created_at %></span>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
